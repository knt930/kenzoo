html, button, input, select, textarea{
  color: #222;
}

div {
}

ul {
  -webkit-margin-before: 1em;
  -webkit-margin-after: 1em;
  -webkit-margin-start: 0px;
  -webkit-margin-end: 0px;
  -webkit-padding-start: 40px;
}

li {
  text-align: -webkit-match-parent;
}

p {
  -webkit-margin-before: 1em;
  -webkit-margin-after: 1em;
  -webkit-margin-start: 0px;
  -webkit-margin-end: 0px;
}

body {
  background-color: black;
  font-family: "garamond" , "Crimson Text", serif;
  font-size: 1em;
  margin: 0;
}

header {
  background-color: black;
}

/*ホーム画面*/
.jumbotron {
  background-color: black;
  padding: 0;
}

/*ナビバー*/
#kzTop .navbar {
  padding: 0;
  margin-top: 50px;
}

#kzTop .bg-dark {
  background-color: rgba(24,24,24,0.8) !important;
}

#kzTop .navbar-nav {
  margin: 0;
}

#kzTop .nav-link {
  padding: 6px 150px;
  color: #818181;
  &:hover {
    background-color: rgba(60,60,60,0.9);
    cursor: pointer;
  }
}

/*フッター*/

#footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  margin-left: 32px;
}

#copyright {
  margin-left: 12px;
  margin-right: 12px;
  padding-top: 10px;
  clear: both;
  font-size: 11px;
  color: #a1a1a1;
}

/*コンテンツ*/
.contents-wrapper {
  color: black;
  padding: 20px;
}

/*コンテンツヘッダー*/
#kz .bg-dark {
  background-color: black !important;
}

#kz #nav-img {
  width: 150px;
  height: 70px;
}

#kz .navbar {
  padding: 0;
}

#kz .navbar-brand {
  padding: 0;
}

#kz .navbar-nav {
  margin-top: 0;
}

#kz .navbar-nav .nav-link {
  text-align: center;
}

#kz .nav-item {
  margin: 0 20px;
}

/*フッター*/

#kz-footer {
  text-align: right;
  height: 35px;
  position: fixed;
  bottom: 0;
  right: 5px;
  #copyright {
    color: black;
  }
}

#kz {
  background-color: white;
}
